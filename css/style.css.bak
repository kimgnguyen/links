* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Segoe UI";
    color: white;
    font-size: 12px;
}

body {
    height: 100vh;
    width: 100vw;
    background-color: #2f2f2f;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;

}

h1 {
    font-size: xx-large;
    font-weight: 600;
    margin-bottom: 10px;
    color: inherit;
    text-align: left;
}

.links-wrapper {
    display: flex;
}

.links-wrapper div {
    display: flex;
    flex-direction: column;
    margin-right: 75px;
}

.links-wrapper div:last-child {
    margin-right: 0px;
}

.links-wrapper div a.mid {
    text-align: left;
    text-decoration: none;
    color: inherit;
    opacity: 1;
    margin-bottom: 5px;
    font-size: small;
    position: relative;
}

.links-wrapper div a.mid:hover {
    color: white;
    opacity: 1;
    cursor: default;
    transition: all 0.3s ease-in-out 0s;
}

.links-wrapper div a.mid::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: 0;
    left: 0;
    background-color: hotpink;
    visibility: hidden;
    transform: scaleX(0);
    transition: all 0.3s ease-in-out 0s;
}

.links-wrapper div a.mid:hover::before {
    visibility: visible;
    transform: scaleX(0.5);

}